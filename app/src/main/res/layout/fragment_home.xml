<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





    <LinearLayout
        android:id="@+id/LinearHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topGuideline"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/pup"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"/>


    </LinearLayout>

    <TextView
        android:id="@+id/what_would_to_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would like to eat?"
        android:textColor="@color/pup"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/LinearHome"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="0dp"
        android:layout_height="@dimen/_140sdp"
        app:layout_constraintStart_toStartOf="@id/letGuideLine"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@+id/what_would_to_eat"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:id="@+id/random_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/pup"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_ove_popular_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Over Popular Items"
        app:layout_constraintTop_toBottomOf="@+id/card_home"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/pup"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/over_rec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_ove_popular_item"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline"/>

    <TextView
        android:id="@+id/tv_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        app:layout_constraintTop_toBottomOf="@+id/over_rec"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/pup"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories"
        app:layout_constraintStart_toStartOf="@+id/letGuideLine"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>




<androidx.constraintlayout.widget.Guideline
    android:id="@+id/topGuideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/letGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>